<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget27"
    android:background="#A982E1">

    <LinearLayout
        android:layout_height="300dp"
        android:layout_width="300dp"
        android:id="@+id/widget28"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/widget30"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Please Insert The Side Length To Calculate The Surfaces And Volume">
        </TextView>

        <EditText
            android:layout_height="45dp"
            android:layout_width="200dp"
            android:id="@+id/sisi"
            android:textSize="20dp">
        </EditText>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/widget32"
            android:textStyle="bold"
            android:text="Surface area"
            android:textSize="20dp">
        </TextView>

        <TextView
            android:layout_height="45dp"
            android:layout_width="200dp"
            android:id="@+id/luas"
            android:textColor="@color/teal_700"
            android:textSize="20dp">
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/widget33"
            android:textStyle="bold"
            android:text="Cube Volume"
            android:textSize="20dp">
        </TextView>

        <TextView
            android:layout_height="45dp"
            android:layout_width="200dp"
            android:id="@+id/volume"
            android:textColor="@color/teal_700"
            android:textSize="20dp">
        </TextView>

    </LinearLayout>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/count"
        android:text="Count"
        android:layout_alignRight="@+id/widget28"
        android:layout_below="@+id/widget28">
    </Button>

</RelativeLayout>